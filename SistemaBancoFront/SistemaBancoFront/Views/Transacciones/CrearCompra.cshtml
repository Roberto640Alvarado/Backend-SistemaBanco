@model SistemaBancoFront.Models.DTO.CompraDTO
@{
    ViewData["Title"] = "Crear Compra";
}

<div class="container mt-4">
    <div class="bg-danger text-white p-2 mb-3">
        <h2 class="text-center">Registro de una compra</h2>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Realizar una Compra</h3>
    </div>

    <!-- Mostrar mensaje de éxito o error -->
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-info">
            @TempData["Mensaje"]
        </div>
    }

    <form id="crearCompraForm" method="post" action="/Transacciones/CrearCompra">
        <div class="mb-3">
            <label for="nombreCliente" class="form-label">Nombre Cliente:</label>
            <input type="text" id="nombreCliente" name="nombreCliente" class="form-control"
                   value="@ViewBag.NombreCliente @ViewBag.ApellidoCliente" readonly />
        </div>

        <div class="mb-3">
            <label for="numeroTarjeta" class="form-label">Número de Tarjeta:</label>
            <input type="text" id="numeroTarjeta" name="numeroTarjeta" class="form-control"
                   value="@ViewBag.NumeroTarjeta" readonly />
        </div>

        <div class="mb-3">
            <label for="fechaCompra" class="form-label">Fecha de Compra:</label>
            <input type="date" id="fechaCompra" name="fechaCompra" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción:</label>
            <input type="text" id="descripcion" name="descripcion" class="form-control" placeholder="Descripción de la compra" required />
        </div>

        <div class="mb-3">
            <label for="monto" class="form-label">Monto:</label>
            <input type="number" id="monto" name="monto" class="form-control" placeholder="Monto de la compra" required />
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">Guardar</button>
            <a href="/" class="btn btn-warning text-dark">Cancelar</a>
        </div>
    </form>
</div>
